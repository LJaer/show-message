<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.zk.ssm.mapper.ArticleMapperCustom" >

	<!-- 查询三条最新的文章 -->	
	<select id="findLastArticleList" resultType="cn.zk.ssm.po.ArticleStyle1">
		select * from article order by id desc LIMIT 0, 3
	</select>
	
	<!-- 根据一级分类id查询该分类下前六篇 -->	
	<select id="findFirstCategoryLastArticleList" resultType="cn.zk.ssm.po.Article">
		SELECT * FROM article WHERE secondcategoryid= #{id}  ORDER BY TIME LIMIT 0,6
	</select>
</mapper>